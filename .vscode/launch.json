        // The values for the parameters were determine by examaning the launch scripts:
        // multinode-demo/bootstrap-validator.sh
        // multinode-demo/common.sh
        // net/common.sh
        {
            "name": "jito-solana-validator",
            "type": "lldb",
            "request": "launch",
            "preLaunchTask": "node-setup",
            "program": "${workspaceFolder}/target/debug/solana-validator",
            "args": [
                "--ledger", "${workspaceFolder}/config/bootstrap-validator",
                "--rpc-port", "8899",
                "--snapshot-interval-slots", "200",
                "--no-incremental-snapshots",
                "--identity", "${workspaceFolder}/config/bootstrap-validator/identity.json",
                "--vote-account", "${workspaceFolder}/config/bootstrap-validator/vote-account.json",
                "--rpc-faucet-address", "127.0.0.1:9900",
                "--no-poh-speed-test",
                "--no-os-network-limits-test",
                "--no-wait-for-vote-to-start-leader",
                "--full-rpc-api",
                "--allow-private-addr",
                "--gossip-port", "8001",
                "--log", "-"              
            ],
            "cwd": "${workspaceFolder}",
        },
